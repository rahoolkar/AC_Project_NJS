<% layout('layouts/boilerplate.ejs') -%>
<body>
    <div class="row">
        <div class="col-8 offset-3">
        <h3>Listings Details : </h3>
        </div>
        <div class="card show-card col-6 offset-3">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing-image">
            <div class="card-body">
                <p><%= listing.title %></p>
                <p><%= listing.description %></p>
                <p>&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
                <p><%= listing.location %></p>
                <p><%= listing.country %></p>
            </div>
        </div>
        <div class="buttons">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary col-1 offset-3 add-btn">Edit</a>
        
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                <button class="btn btn-dark offset-5">Delete</button>
            </form>
        </div>
    </div>        
</body>
